<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="josim74.git.com.hrfeeddepo.TransferSchedule">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:padding="4dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_dealerName_transferSchedule"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:text="SMG SoftTech LTD"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_date_transferSchedule"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:text="20-10-2018"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="4dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="@string/product_name"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_productName_transferSchedule"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="PBC"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="@string/quantity_order_schedule"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_quantity_transferSchedule"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="20"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="@string/total_order_schedule"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_total_transferSchedule"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="100000"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="4dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="@string/driver_name_order_schedule"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_driverName_transferSchedule"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="Monir Driver"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="@string/car_number_order_schedule"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_carNumber_transferSchedule"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="Dhaka 1230"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="@string/phone_order_schedule"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_phone_transferSchedule"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:text="017000000"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <ToggleButton
                    android:id="@+id/toggleButton_transferSchedule"
                    android:layout_width="32dp"
                    android:layout_height="128dp"
                    android:text="ToggleButton"
                    android:textOff="Off"
                    android:textOn="ON" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</FrameLayout>
